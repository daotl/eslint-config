  "includes": [
    "**/*.{ts,tsx,mts,cts,js,jsx,mjs,cjs,json,md,toml,dockerfile,Dockerfile}",
    "**/Dockerfile",
    "**/*.Dockerfile"
  ],
  "excludes": ["**/node_modules", "**/*-lock.json"],
  "plugins": [
    // You may specify any urls or file paths here that you wish.
    "https://plugins.dprint.dev/typescript-0.83.0.wasm",
    "https://plugins.dprint.dev/json-0.17.0.wasm",
